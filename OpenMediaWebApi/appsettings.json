{
  "OpenMediaDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "open_media",
    "UsersCollectionName": "users",
    "PostsCollectionName": "posts",
    "CommentsCollectionName": "comments",
    "ConversationsCollectionName": "conversations",
    "MessagesCollectionName": "messages",
    "FriendshipsCollectionName": "friendships"
  },
  "JwtSettings": {
    "Secret": "your_very_secret_key",
    "Issuer": "your_api_domain",
    "Audience": "your_api_clients",
    "AccessTokenExpirationInMinutes": 30,
    "RefreshTokenExpirationInDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
